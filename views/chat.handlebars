<link rel ="stylesheet" type = "text/css" href="../css/chat.css">

<div> {{message}}</div><br>

<div class ="container-fluid chat">

	<div class="leftSide col-md-3">
		<h2>
			Enter a Chat Name
		</h2>

		<div class ="addChat">
			<input type = "text" name ="chatName" placeholder = "Chat Name"><br>
			<input type = "password" name = "pass" placeholder = "optional Password"> <br>
			<button class="btn btn-success"> Add chat</button>
		</div>

		<p>
		Create a chat by entering a name and optional password!
		<p>
	</div>

	<div class="rightSide chatContainer col-md-9 row">
		<div class="chatBox" style="display: none;">
			<div class="conversation">
			</div>
			<input type = "text" name ="input" placeholder = "Type your message here!"><br>
		</div>
	</div>


</div>

<script src="https://cdn.socket.io/socket.io-1.3.7.js"></script>
